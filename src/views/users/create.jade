.users-form
    
    h1 Create User
    
    
    form(ng-submit="submitForm()")
        
        div
            input(type="text" ng-model="newUser.name" placeholder="Name")
        div
            input(type="text" ng-model="newUser.avatar" placeholder="Avatar URL")
        div
            input(type="text" ng-model="newUser.bio" placeholder="About this user...")
        div
            input(type="submit" value="Create")
